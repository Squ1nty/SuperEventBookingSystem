<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.supereventbookingsystem.EventsListController">
   <children>
      <Label alignment="CENTER" text="Events List">
         <font>
            <Font name="Comic Sans MS" size="40.0" />
         </font>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Label>
      <TableView fx:id="eventsTable" maxHeight="450.0" maxWidth="800.0" prefHeight="400.0">
        <columns>
          <TableColumn fx:id="eventCol" minWidth="105.0" prefWidth="-1.0" text="Event" />
          <TableColumn fx:id="venueCol" minWidth="105.0" prefWidth="-1.0" text="Venue Name" />
            <TableColumn fx:id="dayCol" minWidth="105.0" prefWidth="-1.0" text="Day" />
            <TableColumn fx:id="priceCol" minWidth="105.0" prefWidth="-1.0" text="Price ($)" />
            <TableColumn fx:id="ticketsSoldCol" minWidth="105.0" prefWidth="-1.0" text="Tickets Sold" />
            <TableColumn fx:id="ticketsLeftCol" minWidth="105.0" prefWidth="-1.0" text="Tickets Left" />
            <TableColumn fx:id="totalTicketsCol" minWidth="105.0" prefWidth="-1.0" text="Total Tickets" />
        </columns>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button alignment="CENTER" maxWidth="150.0" mnemonicParsing="false" onAction="#handleRefresh" prefWidth="100.0" text="Refresh" textAlignment="CENTER">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Button>
      <Button alignment="CENTER" maxWidth="150.0" mnemonicParsing="false" onAction="#handleBackToMain" prefWidth="100.0" text="Back" textAlignment="CENTER">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
