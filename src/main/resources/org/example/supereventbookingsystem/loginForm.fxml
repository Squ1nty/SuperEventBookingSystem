<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="461.0" prefWidth="430.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.supereventbookingsystem.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="loginFormHeading" text="SuperTicketingSystem">
         <font>
            <Font name="Comic Sans MS" size="19.0" />
         </font>
      </Label>
      <Label fx:id="usernameLabel" prefHeight="18.0" prefWidth="360.0" text="Username:" />
      <TextField fx:id="usernameInput" />
      <Label fx:id="usernameInputResponseLabel"/>
      <Label fx:id="pwdInputLabel" prefHeight="18.0" prefWidth="360.0" text="Password:" />
      <PasswordField fx:id="pwdInput" />
      <Label fx:id="pwdInputResponseLabel"/>
      <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#handleSubmit" prefHeight="31.0" prefWidth="56.0" text="Login" />
   </children>
</VBox>
