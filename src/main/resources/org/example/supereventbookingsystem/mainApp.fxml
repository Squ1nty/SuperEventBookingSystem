<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" maxHeight="750.0" maxWidth="1000.0" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.supereventbookingsystem.MainController">
   <children>
      <Label fx:id="mainHeading" alignment="CENTER" prefHeight="78.0" prefWidth="800.0" text="SuperEventTicketing" textAlignment="CENTER">
         <font>
            <Font size="40.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="userGreetingLabel" alignment="CENTER" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <VBox alignment="CENTER" maxWidth="800.0" prefHeight="223.0" prefWidth="800.0" spacing="25.0">
         <children>
            <Button fx:id="eventsListBtn" maxWidth="250.0" mnemonicParsing="false" onAction="#getAllEventsCaller" prefWidth="250.0" text="Events List">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="makeBookingBtn" maxWidth="250.0" mnemonicParsing="false" prefWidth="250.0" text="Make a Booking">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="checkoutBtn" maxWidth="250.0" mnemonicParsing="false" prefWidth="250.0" text="Checkout">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="orderHistoryBtn" maxWidth="250.0" mnemonicParsing="false" prefWidth="250.0" text="Order History">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
