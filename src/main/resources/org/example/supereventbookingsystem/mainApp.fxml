<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="CENTER" maxHeight="750.0" maxWidth="5000.0" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.supereventbookingsystem.MainController">
   <children>
      <Label fx:id="mainHeading" alignment="CENTER" prefHeight="78.0" prefWidth="800.0" text="SuperEventTicketing" textAlignment="CENTER">
         <font>
            <Font size="40.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="userGreetingLabel" alignment="CENTER" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" prefHeight="378.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <TableView fx:id="eventsTable" editable="true" fixedCellSize="0.0" prefHeight="400.0">
               <columns>
                  <TableColumn fx:id="eventCol" maxWidth="-1.0" minWidth="125.0" prefWidth="-1.0" text="Event" />
                  <TableColumn fx:id="venueCol" maxWidth="-1.0" minWidth="125.0" prefWidth="-1.0" text="Venue Name" />
                  <TableColumn fx:id="dayCol" maxWidth="-1.0" minWidth="125.0" prefWidth="-1.0" text="Day" />
                  <TableColumn fx:id="priceCol" maxWidth="-1.0" minWidth="125.0" prefWidth="-1.0" text="Price ($)" />
                  <TableColumn fx:id="ticketsSoldCol" maxWidth="-1.0" minWidth="125.0" prefWidth="-1.0" text="Tickets Sold" />
                  <TableColumn fx:id="ticketsLeftCol" maxWidth="-1.0" minWidth="125.0" prefWidth="-1.0" text="Tickets Left" />
                  <TableColumn fx:id="totalTicketsCol" maxWidth="-1.0" minWidth="125.0" prefWidth="-1.0" text="Total Tickets" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets right="20.0" />
         </padding>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" prefWidth="800.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
            <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#handleLogout" text="Log Out" />
         </children>
      </HBox>
   </children>
</VBox>
